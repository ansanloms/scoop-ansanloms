        "https://github.com/yuru7/PlemolJP/releases/download/v2.0.2/PlemolJP_NF_v2.0.2.zip",
        "https://github.com/yuru7/PlemolJP/releases/download/v2.0.2/PlemolJP_v2.0.2.zip"
