  "checkver": "github",
  "autoupdate": {
    "url": "https://github.com/miiton/Cica/releases/download/v$version/Cica_v$version_with_emoji.zip"
  },
  "depends": [
    "sudo",
    "ps-font-scripts"
  ],
  "installer": {
    "script": [
      "sudo add-font -path $dir\\Cica-Regular.ttf",
      "sudo add-font -path $dir\\Cica-RegularItalic.ttf",
      "sudo add-font -path $dir\\Cica-Bold.ttf",
      "sudo add-font -path $dir\\Cica-BoldItalic.ttf"
    ]
  },
  "uninstaller": {
    "script": [
      "sudo remove-font -file Cica-Regular.ttf",
      "sudo remove-font -file Cica-RegularItalic.ttf",
      "sudo remove-font -file Cica-Bold.ttf",
      "sudo remove-font -file Cica-BoldItalic.ttf"
    ]
  }
}
